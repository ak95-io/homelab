{% if item.value.ssh.config_addons is defined %}
{% for config_addon in item.value.ssh.config_addons %}
{{ config_addon }}
{% endfor %}
{% endif %}
# Rest
Host *
  ServerAliveInterval 60
  ServerAliveCountMax 5

  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  GlobalKnownHostsFile /dev/null
  AddKeysToAgent yes
  ForwardAgent yes
  ForwardX11 no
  PreferredAuthentications publickey,keyboard-interactive
  Compression yes

  VisualHostKey yes
  LogLevel ERROR
  HashKnownHosts yes
  ControlPath /tmp/%C
  ControlMaster auto
  ControlPersist 60m
  ControlMaster auto
  Protocol 2

  KexAlgorithms curve25519-sha256,ecdh-sha2-nistp521,ecdh-sha2-nistp256,diffie-hellman-group-exchange-sha1
  HostKeyAlgorithms ecdsa-sha2-nistp521,ecdsa-sha2-nistp256,ssh-rsa
  Ciphers 3des-cbc,aes256-cbc,aes256-ctr
  MACs hmac-sha2-512,hmac-sha2-256
